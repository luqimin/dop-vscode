{
    "name": "dophin",
    "displayName": "dop",
    "description": "The way to use dop grafully",
    "version": "0.5.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/luqimin/dop-vscode"
    },
    "publisher": "luqimin",
    "engines": {
        "vscode": "^1.0.0"
    },
    "icon": "icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.dopFormat",
        "onCommand:extension.dopServer",
        "onCommand:extension.dopCompile",
        "onCommand:extension.dopDeploy"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.dopFormat",
                "title": "格式化文件 (dop format)",
                "category": "dophin"
            },
            {
                "command": "extension.dopServer",
                "title": "本地服务 (dop server)",
                "category": "dophin"
            },
            {
                "command": "extension.dopCompile",
                "title": "编译文件 (dop compile)",
                "category": "dophin"
            },
            {
                "command": "extension.dopDeploy",
                "title": "部署文件 (dop deploy)",
                "category": "dophin"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.dopFormat",
                    "when": "resourceLangId == css"
                },
                {
                    "command": "extension.dopFormat",
                    "when": "resourceLangId == scss"
                },
                {
                    "command": "extension.dopFormat",
                    "when": "resourceLangId == less"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.dopFormat",
                    "group": "dophin@0",
                    "when": "resourceLangId == css"
                },
                {
                    "command": "extension.dopFormat",
                    "group": "dophin@0",
                    "when": "resourceLangId == scss"
                },
                {
                    "command": "extension.dopFormat",
                    "group": "dophin@0",
                    "when": "resourceLangId == less"
                },
                {
                    "command": "extension.dopServer",
                    "group": "dophin@1"
                },
                {
                    "command": "extension.dopCompile",
                    "group": "dophin@2"
                },
                {
                    "command": "extension.dopDeploy",
                    "group": "dophin@3"
                }
            ],
            "editor/context": [
                {
                    "command": "extension.dopFormat",
                    "group": "dophin@0",
                    "when": "resourceLangId == css"
                },
                {
                    "command": "extension.dopFormat",
                    "group": "dophin@0",
                    "when": "resourceLangId == scss"
                },
                {
                    "command": "extension.dopFormat",
                    "group": "dophin@0",
                    "when": "resourceLangId == less"
                },
                {
                    "command": "extension.dopServer",
                    "group": "dophin@1"
                },
                {
                    "command": "extension.dopCompile",
                    "group": "dophin@2"
                },
                {
                    "command": "extension.dopDeploy",
                    "group": "dophin@3"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}