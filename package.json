{
    "name": "dophin",
    "displayName": "dop",
    "description": "The way to use dop grafully",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/luqimin/dop-vscode"
    },
    "publisher": "luqimin",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.dopServer",
        "onCommand:extension.dopCompile",
        "onCommand:extension.dopDeploy"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
                "command": "extension.dopServer",
                "title": "dop server: 启动本地服务",
                "category": "dophin"
            },
            {
                "command": "extension.dopCompile",
                "title": "dop compile: 编译静态文件",
                "category": "dophin"
            },
            {
                "command": "extension.dopDeploy",
                "title": "dop deploy: 部署静态文件",
                "category": "dophin"
            }
        ],
        "menus": {
            "editor/context": [{
                "command": "extension.dopServer",
                "group": "dophin@0"
            }, {
                "command": "extension.dopCompile",
                "group": "dophin@1"
            }, {
                "command": "extension.dopDeploy",
                "group": "dophin@2"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}